<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>OTP Verification</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="card shadow-lg">
      <div class="card-body">
        <h2 class="text-center mb-4">Verify OTP</h2>
        <form id="verifyOtpForm" method="POST" action="/verify-otp">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required />
          </div>
          <div class="mb-3">
            <label for="otp" class="form-label">OTP</label>
            <input type="text" class="form-control" id="otp" name="otp" required />
          </div>
          <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <% if (message) { %>
            <div class="alert alert-success"><%= message %></div>
          <% } %>
          <button type="submit" class="btn btn-primary w-100">Verify</button>
        </form>
        <hr />
        <form id="resendOtpForm" method="POST" action="/resend-otp">
          <input type="hidden" name="email" id="hiddenEmail" />
          <button type="submit" class="btn btn-secondary w-100 mt-3">Resend OTP</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    // Auto-fill email for resending OTP
    document.getElementById("verifyOtpForm").addEventListener("submit", function (e) {
      document.getElementById("hiddenEmail").value = document.getElementById("email").value;
    });
  </script>
</body>
</html>
